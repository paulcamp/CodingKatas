@model IEnumerable<RemindersDemo.Models.ReminderItem>

@{
    ViewBag.Title = "Task List";
}

<h2>Task List</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AssignedUserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EscalationUserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OpenStatus)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateDue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OverDue)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EscalatedByYou)
        </th>
        <th></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        //highlight overdue rows
        var rowClass = item.OverDue ? "table-warning" : "table-active";

        <tr class="@rowClass">
            <td>
                @Html.DisplayFor(modelItem => item.AssignedUserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EscalationUserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpenStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateDue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OverDue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EscalatedByYou)
            </td>
            <td>
                @Html.ActionLink("Complete", "Complete", new { id = item.Id })
            </td>
        </tr>
    }
    
    @if (!Model.Any())
    {
        <tr class="table-primary"><td colspan="10">no tasks to display</td></tr>
    }

    

</table>
